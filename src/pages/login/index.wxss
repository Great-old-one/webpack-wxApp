Page {
  background-color: #fff;
}

.login-form {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.item-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 112rpx;
  border-bottom: solid 1px #E6E6E6;
}

.icon {
  width: 26rpx;
  height: 39rpx;
}

input {
  margin: 0 25rpx;
  flex: 1;
  height: 100%;
}

.placeholder {
  font-size: 32rpx;
}

.verify-button {
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 120rpx;
  height: 60rpx;
  font-size: 26rpx;
  color: #F03D37;
  border-radius: 30rpx;
  border: 1px solid #F03D37;
}

.verify-button.disabled {
  background-color: #CBCBCB;
}

.verify-button.normal {
  background-color: #fff;
}

.submit-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  border-radius: 30rpx;
}

.submit-button.normal {
  background-color: #F44642;
}

.submit-button.disabled {
  background-color: #CBCBCB;
}